<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title.capitalize %></h1>
      <p> <%= @portfolio_item.subtitle %></p>
      <p> <%= @portfolio_item.body %></p>
      <h5>Technologies used</h5>
      <% @portfolio_item.technologies.each do |port| %>
        <%= fa_icon "angle-right" %> <%= port.name %>
        <br />
      <% end %>
    </div>
     <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit Portfolio", edit_portfolio_path(@portfolio_item), class: 'btn btn-secondary mt-2 btn-sm' %>
          <%= link_to "Delete Portfolio", @portfolio_item, method: :delete, data: {confirm: 'Are you sure'}, class: 'btn btn-danger mt-2 btn-sm' %>
        </div>
      <% end %>

  </div>
 </div>
