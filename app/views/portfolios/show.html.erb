<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image.url, width: '100%' unless @portfolio_item.main_image.nil? %>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title %></h1>
      <p> <%= @portfolio_item.subtitle %></p>
      <p> <%= @portfolio_item.body %></p>
      <h1>Technologies used</h1>
      <% @portfolio_item.technologies.each do |port| %>
        <li><%= port.name%></li>
      <% end %>
    </div>
  </div>
 </div>
