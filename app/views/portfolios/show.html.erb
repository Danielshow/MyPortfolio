<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1> <%= @portfolio_item.title %></h1>
      <p> <%= @portfolio_item.subtitle %></p>
      <p> <%= @portfolio_item.body %></p>
      <h1>Technologies used</h1>
      <% @portfolio_item.technologies.each do |port| %>
        <%= fa_icon "list" %> <%= port.name %>
        <br />
      <% end %>
      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
          <%= link_to "Edit Portfolio", edit_portfolio_path(@portfolio_item), class: 'btn btn-secondary mt-4' %>
          <%= link_to "Delete Portfolio", @portfolio_item, method: :delete, data: {confirm: 'Are you sure'}, class: 'btn btn-danger mt-4' %>
        </div>
      <% end %>
    </div>
  </div>
 </div>
