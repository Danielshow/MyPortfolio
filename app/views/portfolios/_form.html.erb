<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <div id="error_explanation">
      <p class="alert alert-danger"><%= pluralize(@portfolio_item.errors.count, "error") %> prohibited this portfolio from being saved:</h2>
      <ul>
        <% @portfolio_item.errors.full_messages.each do |message| %>
          <li><small class="text-danger"><%= message %></small></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row port-form">
    <div class="col-md-6">
     <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :subtitle%>
        <%= f.text_field :subtitle, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :main_image %>
        <%= f.file_field :main_image, class: 'form-control-file btn btn-secondary' %>
      </div>

      <div class="form-group">
        <%= f.label :thumb_image %>
        <%= f.file_field :thumb_image, class: 'form-control-file btn btn-secondary' %>
      </div>
    </div>
     <div class="col-md-6">
       <div class="form-group">
          <%= f.label :body %>
          <%= f.rich_text_area :body %>
        </div>
      </div>
     <div class="col-md-12">
        <h3>Technology used</h3>
        <%= f.fields_for :technologies do |ff| %>
          <%= render 'technology_fields', f: ff %>
        <% end %>
      </div>

  </div>
      
   <div class="port-form">
    <%= link_to_add_association fa_icon("plus-square"), f, :technologies %>
  </div>
  <div class="field">
    <%= f.submit 'Save Portfolio Item', class: 'btn btn-block btn-primary' %>
  </div>
<% end %>

