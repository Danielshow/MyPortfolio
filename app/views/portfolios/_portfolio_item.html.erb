<div class="col-md-4 portfolio-card" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= portfolio_item.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a href="<%= portfolio_show_path(portfolio_item)%>" class="btn btn-sm btn-outline-secondary">View</a>
          <% if logged_in?(:site_admin) %>
            <a href= "<%= edit_portfolio_path(portfolio_item)%>" class="btn btn-sm btn-outline-secondary">Edit</a>
            <%= link_to 'Delete Portfolio', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin)%>
          <% end %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
