<div class="row">
  <div class="col-md-8 blog-main">
    <p id="notice"><%= notice %></p>
    <h1>
      <%= @blog.title %>
    </h1>
    <%= @blog.topic.title %>
    <p class="mb-1 text-muted">Published <%= time_ago_in_words(@blog.created_at) %> ago</p>
    <br />
    <p>
      <%= @blog.body %>
    </p>
    <% unless current_user.is_a? GuestUser %>
      <%= render 'comments/comment_form' %>
    <% end %>

    <div id="comments" data-blog-id="<%= @blog.id %>">
      <%= render @blog.comments %>
    </div>
    <%= link_to 'Edit Blog', edit_blog_path(@blog), class: 'btn btn-secondary mb-2 mt-2' if logged_in?(:site_admin) %>
    <%= link_to 'Back', blogs_path, class: 'btn btn-secondary mt-2 mb-2' %>
  </div>
  <%= render 'aside' %>
</div>

