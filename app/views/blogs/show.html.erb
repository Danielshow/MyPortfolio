<div class="row">
  <div class="col-md-8 blog-main">
    <p id="notice"><%= notice %></p>
    <h1>
      <%= @blog.title %>
    </h1>
    <p class="mb-1 text-muted">Published <%= time_ago_in_words(@blog.created_at) %> ago</p>
    <br />
    <p>
      <%= @blog.body %>
    </p>

    <%= link_to 'Edit Blog', edit_blog_path(@blog), class: 'btn btn-secondary' if logged_in?(:site_admin) %>
    <%= link_to 'Back', blogs_path, class: 'btn btn-secondary' %>
  </div>
  <%= render 'aside' %>
</div>

