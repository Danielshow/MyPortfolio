<div class="post-preview">
  <a href="<%= blog_path(blog) %>">
    <h2 class="post-title"><%= blog.title %></h2>
    <h3 class="post-subtitle"><%= strip_body(blog.body, 40) %></h3>
  </a>
  <p class="post-meta"><i>Published <%= time_ago_in_words(blog.created_at) %> ago</i></p>
  <%= render partial: 'blogs/admin_action', locals: { blog: blog } %>
</div>
<hr />

