<header class="masthead" style="background-image:url('<%= image_url('home-bg.jpg') %>');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto">
        <div class="site-heading">
          <h1>My Blog Post</h1><span class="subheading">I write to share my knowledge to the world and improve myself daily.</span>
          <p class="lead mb-0"><a href="<%= root_path %>" class="text-white font-weight-bold">Read more about me...</a></p>
          <p><%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' if logged_in?(:site_admin) %>
         <%= link_to 'All topics', topics_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</header>
